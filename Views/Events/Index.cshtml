@model IEnumerable<EventEaseApp.Models.Event>
    
@{
	ViewData["Title"] = "Event List";
}

<h2>ViewData["Title"]</h2>


<table class="table">
	<thead>
		<tr>
			<th>Event Id</th>
			<th>Event Name</th>
			<th> Event Description</th>
			<th>Event Date</th>
			<th>Venue Id</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var Event in Model){
			<tr>
				<td>@Event.EventId</td>
				<td>@Event.EventName</td>
				<td>@Event.EventDescription</td>
				<td>@Event.EventDate.ToString("yyy-mm-dd HH:mm")</td>
				<td>@Event.VenueId</td>
				<td>
				<a asp-action="Edit" asp-route-id="@Event.EventId" class="btn-warning">Edit</a>
				<a asp-action="Delete" asp-route-id="@Event.EventId" class="btn-danger">Delete</a>
				<a	onclick="return confirm('Are you sure you want to delete this event?');">Delete </a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-action="Create" class="btn btn-success">New Event</a>
